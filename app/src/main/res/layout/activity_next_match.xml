<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@mipmap/pay_success_bg"
    android:orientation="vertical">


    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <include
        android:id="@+id/framelayout_top"
        layout="@layout/top_view" />


    <com.zhy.autolayout.AutoRelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_marginTop="140px"

            android:layout_marginRight="@dimen/view_margin_30"
            android:layout_marginLeft="@dimen/view_margin_30"
            android:layout_width="match_parent"
            android:layout_height="550px"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/next_match_bg">




            <com.zhy.autolayout.AutoLinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >


                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_marginTop="@dimen/view_text_60"
                    android:id="@+id/linear_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"


                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/linear_order"
                        android:layout_marginLeft="@dimen/view_text_60"
                        android:maxLines="1"
                        android:text="赛区"
                        android:textColor="@color/home_text"
                        android:textSize="@dimen/text_button_30" />
                    <TextView
                        android:layout_marginRight="@dimen/view_text_60"
                        android:id="@+id/et_verify_code"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:textColor="@color/home_text_mid"
                        android:gravity="right"
                        android:maxLines="1"
                        android:paddingLeft="30px"
                        android:text="比比部落"
                        android:textSize="@dimen/text_button_30"  />

                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_marginTop="@dimen/view_margin_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/linear_order"
                        android:layout_marginLeft="@dimen/view_text_60"
                        android:maxLines="1"
                        android:text="比赛时间"
                        android:textColor="@color/home_text"
                        android:textSize="@dimen/text_button_30" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/linear_order"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/view_text_60"
                        android:gravity="right"
                        android:maxLines="1"
                        android:text="2017/8/12"

                        android:textColor="@color/home_text_mid"
                        android:textSize="@dimen/text_button_30" />
                </com.zhy.autolayout.AutoRelativeLayout>

            </com.zhy.autolayout.AutoLinearLayout>




            <com.zhy.autolayout.AutoLinearLayout
                android:paddingBottom="@dimen/view_margin_60"

                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <com.zhy.autolayout.AutoRelativeLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"


                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/linear_order"
                        android:layout_marginLeft="@dimen/view_text_60"
                        android:maxLines="1"
                        android:text="集合地点"
                        android:textColor="@color/home_text"
                        android:textSize="@dimen/text_button_30" />
                    <TextView
                        android:layout_marginRight="@dimen/view_text_60"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:textColor="@color/home_text_mid"
                        android:gravity="right"
                        android:maxLines="1"
                        android:paddingLeft="30px"
                        android:text="荔湾区芳村信义会馆8号"
                        android:textSize="@dimen/text_button_30"  />

                </com.zhy.autolayout.AutoRelativeLayout>

                <com.zhy.autolayout.AutoRelativeLayout
                    android:layout_marginTop="@dimen/view_margin_30"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/linear_order"
                        android:layout_marginLeft="@dimen/view_text_60"
                        android:maxLines="1"
                        android:text="比赛地点"
                        android:textColor="@color/home_text"
                        android:textSize="@dimen/text_button_30" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/linear_order"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/view_text_60"
                        android:gravity="right"
                        android:maxLines="1"
                        android:text="天河区棠下村"

                        android:textColor="@color/home_text_mid"
                        android:textSize="@dimen/text_button_30" />
                </com.zhy.autolayout.AutoRelativeLayout>

            </com.zhy.autolayout.AutoLinearLayout>


        </com.zhy.autolayout.AutoRelativeLayout>


        <com.zhy.autolayout.AutoLinearLayout
            android:id="@+id/lin_month"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40px"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal|bottom"
            android:layout_width="130px"
            android:layout_height="160px"
            android:background="@mipmap/sign_month_bg"
            android:orientation="vertical" >

            <TextView

                android:id="@+id/sign_month_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/view_margin_60"
                android:textColor="@color/colorAccent"
                android:text="15" />

            <TextView
                android:layout_marginBottom="10px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:textSize="20px"
                android:text="天" />

        </com.zhy.autolayout.AutoLinearLayout>

        <TextView
            android:layout_marginTop="150px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/lin_month"
            android:maxLines="1"
            android:text="剩余"
            android:textColor="@color/home_text"
            android:textSize="@dimen/text_button_30" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="fill_parent"
            android:layout_height="110px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/view_margin_60"
            android:layout_marginLeft="100px"
            android:layout_marginRight="100px"
            android:background="@mipmap/btn_login"
            android:gravity="center"
            android:paddingBottom="20px"
            android:text="@string/once_join"
            android:textColor="@color/login_withe"
            android:textSize="40px" />
    </com.zhy.autolayout.AutoRelativeLayout>
</com.zhy.autolayout.AutoLinearLayout>
