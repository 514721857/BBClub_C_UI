<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_title_bg"
    android:orientation="vertical" >

    <View
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>


    <com.zhy.autolayout.AutoRelativeLayout

        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:layout_marginTop="@dimen/view_margin_15"
            android:layout_marginLeft="@dimen/view_margin_30"
            android:drawablePadding="@dimen/view_margin_15"
            android:drawableLeft="@mipmap/location"
            android:text="广州"
            android:id="@+id/main_location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_button_30" />


            <com.zhy.autolayout.AutoLinearLayout
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/view_margin_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal" >

                <ImageView
                    android:layout_weight="1.0"

                    android:id="@+id/sign_image"
                    android:layout_width="45px"
                    android:layout_height="45px"
                    android:src="@mipmap/sign_ico_no"  />


                <ImageView
                    android:layout_marginLeft="@dimen/view_margin_60"
                    android:layout_marginRight="@dimen/view_margin_60"
                    android:layout_weight="1.0"

                    android:id="@+id/match_image"
                    android:layout_width="45px"
                    android:layout_height="45px"

                    android:src="@mipmap/match_ico_no"  />


                <ImageView
                    android:layout_weight="1.0"

                    android:id="@+id/club_image"
                    android:layout_width="45px"
                    android:layout_height="45px"

                    android:src="@mipmap/club_ico_no"  />
            </com.zhy.autolayout.AutoLinearLayout>



        <ImageView
            android:layout_marginTop="@dimen/view_margin_15"
            android:layout_marginRight="@dimen/view_margin_30"
            android:layout_alignParentRight="true"
            android:id="@+id/main_person"
            android:layout_width="45px"
            android:layout_height="wrap_content"
            android:background="@drawable/img_select"
            android:src="@mipmap/main_person"

            />

    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoFrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </com.zhy.autolayout.AutoFrameLayout>

</com.zhy.autolayout.AutoLinearLayout>