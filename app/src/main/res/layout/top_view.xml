<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/view_button_90"
    android:orientation="vertical" >

    <com.zhy.autolayout.AutoFrameLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/view_button_90"
    >

        <ImageView

            android:id="@+id/top_view_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/img_select"
            android:layout_margin="@dimen/view_margin_15"
            android:padding="5px"
            android:src="@mipmap/back" />

        <TextView
            android:drawablePadding="@dimen/view_margin_15"
            android:drawableLeft="@mipmap/location"
            android:drawableRight="@mipmap/location_select"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/view_margin_15"
            android:padding="5px"
            android:text="广州"
            android:id="@+id/top_view_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_text_35" />



        <TextView
            android:id="@+id/top_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_text_35" />


        <ImageView
            android:id="@+id/image_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/view_margin_15"
            android:padding="5px"
            android:background="@drawable/img_select"
            android:gravity="center_vertical"
            android:visibility="gone"
            />

        <TextView
            android:drawablePadding="@dimen/view_margin_15"
            android:id="@+id/top_view_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="@dimen/view_margin_15"
            android:padding="5px"
            android:visibility="gone"
            android:textColor="@color/colorAccent"
            android:background="@drawable/img_select"
            android:gravity="center_vertical"
            android:textSize="@dimen/view_margin_30"
            android:text="全选"
           />

    </com.zhy.autolayout.AutoFrameLayout>

</com.zhy.autolayout.AutoLinearLayout>