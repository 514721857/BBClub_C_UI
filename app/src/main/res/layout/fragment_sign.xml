<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_title_bg"
    android:orientation="vertical" >

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginTop="40px"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal|bottom"
        android:layout_width="130px"
        android:layout_height="160px"

         android:background="@mipmap/sign_month_bg"
        android:orientation="horizontal" >

    <TextView
        android:layout_marginBottom="10px"
        android:id="@+id/sign_month_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/view_margin_60"
        android:textColor="@color/colorAccent"
        android:text="7" />

        <TextView
            android:layout_marginBottom="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="20px"
            android:text="月" />

        </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoRelativeLayout

        android:layout_width="match_parent"
        android:layout_height="900px"
        android:background="@mipmap/sign_text_bg"
        android:orientation="horizontal">

        <com.zhy.autolayout.AutoRelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="@dimen/view_layout_120"

            android:gravity="center"

            >

            <TextView
                android:id="@+id/sign_times_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_layout_120"
                android:text="36"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_text_80" />

            <TextView
                android:id="@+id/sign_times_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/sign_times_text"
                android:layout_marginLeft="@dimen/view_margin_30"
                android:layout_toRightOf="@+id/sign_times_text"
                android:text="次"
                android:textColor="@color/homt_title_black"
                android:textSize="@dimen/text_text_30" />

            <TextView
                android:id="@+id/sign_tip_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_times_text"
                android:layout_marginLeft="110px"
                android:layout_marginTop="@dimen/view_margin_30"
                android:text="累计签到"
                android:textColor="@color/home_text"
                android:textSize="@dimen/text_button_30" />

            <View
                android:layout_width="230px"
                android:layout_height="1dp"
                android:layout_below="@+id/sign_tip_text"
                android:layout_marginLeft="80px"
                android:layout_marginTop="@dimen/view_margin_30"
                android:background="@color/main_line" />


            <TextView
                android:id="@+id/sign_matchs_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_tip_text"
                android:layout_marginLeft="@dimen/view_layout_120"
                android:layout_marginTop="@dimen/view_margin_60"
                android:text="336"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_text_80" />

            <TextView
                android:layout_toRightOf="@+id/sign_matchs_text"
                android:layout_alignBaseline="@+id/sign_matchs_text"
                android:id="@+id/sign_matchs_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/view_margin_30"
                android:text="次"
                android:textColor="@color/homt_title_black"
                android:textSize="@dimen/text_text_30" />


            <TextView
                android:id="@+id/sign_matchs_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sign_matchs_text"
                android:layout_marginLeft="110px"
                android:layout_marginTop="@dimen/view_margin_30"
                android:text="近期赛事"
                android:textColor="@color/home_text"
                android:textSize="@dimen/text_text_30" />


        </com.zhy.autolayout.AutoRelativeLayout>

        <com.zhy.autolayout.AutoLinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/lin_line"
            android:layout_marginTop="110px"

            android:orientation="vertical">

            <View
                android:layout_width="2px"
                android:layout_height="160px"
                android:layout_below="@+id/sign_tip_text"

                android:background="@color/main_line" />

            <View
                android:layout_width="2px"
                android:layout_height="160px"
                android:layout_below="@+id/sign_tip_text"
                android:layout_marginTop="80px"

                android:background="@color/main_line" />
        </com.zhy.autolayout.AutoLinearLayout>
        >


        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

             android:layout_toRightOf="@+id/lin_line"
            android:layout_marginTop="@dimen/view_layout_120"
            >

            <TextView
                android:layout_marginLeft="@dimen/view_layout_120"
                android:id="@+id/xunzhang_times_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_text_80" />

            <TextView
                android:layout_marginLeft="@dimen/view_margin_30"
                android:id="@+id/xunzhang_times_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/xunzhang_times_text"

                android:layout_toRightOf="@+id/xunzhang_times_text"
                android:layout_marginRight="@dimen/view_layout_120"
                android:text="个"
                android:textColor="@color/homt_title_black"
                android:textSize="@dimen/text_text_30" />

            <TextView
                android:layout_marginTop="@dimen/view_margin_30"
                android:layout_marginLeft="110px"
                android:id="@+id/xunzhang_tip_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/xunzhang_times_text"
                android:text="勋章数量"
                android:textColor="@color/home_text"
                android:textSize="@dimen/text_button_30" />

            <View
                android:layout_marginTop="@dimen/view_margin_30"
                android:layout_width="230px"
                android:layout_height="2px"
                android:layout_below="@+id/xunzhang_tip_text"
                android:layout_marginLeft="60px"
                android:background="@color/main_line" />


            <TextView
                android:layout_marginLeft="@dimen/view_layout_120"
                android:id="@+id/matchs_days_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/xunzhang_tip_text"
                android:layout_marginTop="@dimen/view_margin_60"
                android:text="36"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/text_text_80" />

            <TextView
                android:id="@+id/matchs_day_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/matchs_days_text"
                android:layout_marginLeft="@dimen/view_margin_30"
                android:layout_toRightOf="@+id/matchs_days_text"
                android:text="天"
                android:textColor="@color/homt_title_black"
                android:textSize="@dimen/text_text_30" />


            <TextView
                android:id="@+id/matchs_day_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/matchs_days_text"
                android:layout_marginLeft="110px"
                android:layout_marginTop="@dimen/view_margin_30"
                android:text="距离下次赛事"
                android:textColor="@color/home_text"
                android:textSize="@dimen/text_text_30" />


        </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_marginBottom="100px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1.0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView

                android:id="@+id/main_weight_old_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="90"
                android:textColor="@color/home_text_mid"
                android:textSize="@dimen/view_text_60" />

            <TextView
                android:id="@+id/main_weight_old_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/main_weight_old_value"
                android:layout_marginLeft="@dimen/view_margin_15"
                android:layout_toRightOf="@+id/main_weight_old_value"
                android:text="KG"
                android:textColor="@color/home_text_mid"
                android:textSize="@dimen/text_text_20" />


            <TextView
                android:id="@+id/main_weight_old_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_weight_old_value"
                android:layout_marginTop="@dimen/view_margin_30"
                android:text="原始体重"
                android:textColor="@color/home_text_mid"
                android:textSize="@dimen/text_text_20" />


            </com.zhy.autolayout.AutoRelativeLayout>


        <View
            android:layout_width="2px"
            android:layout_height="160px"
            android:layout_below="@+id/sign_tip_text"

            android:background="@color/main_line" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_weight="1.0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"

            >
            <TextView
                android:id="@+id/main_weight_now_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/xunzhang_tip_text"
                android:text="86"
                android:textColor="@color/home_text_mid"
                android:textSize="@dimen/view_text_60" />

            <TextView
                android:id="@+id/main_weight_now_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/main_weight_now_value"
                android:layout_marginLeft="@dimen/view_margin_15"
                android:layout_toRightOf="@+id/main_weight_now_value"
                android:text="KG"
                android:textColor="@color/home_text_mid"
                android:textSize="@dimen/text_text_20" />


            <TextView
                android:id="@+id/main_weight_now_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_weight_now_value"
                android:layout_marginTop="@dimen/view_margin_30"
                android:text="目前体重"
                android:textColor="@color/home_text_mid"
                android:textSize="@dimen/text_text_20" />

        </com.zhy.autolayout.AutoRelativeLayout>

        <View
            android:layout_width="2px"
            android:layout_height="160px"
            android:layout_below="@+id/sign_tip_text"

            android:background="@color/main_line" />

        <com.zhy.autolayout.AutoRelativeLayout
            android:layout_weight="1.0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <TextView

                android:id="@+id/main_weight_fut_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/xunzhang_tip_text"

                android:text="82"
                android:textColor="@color/home_text_mid"
                android:textSize="@dimen/view_text_60" />

            <TextView
                android:id="@+id/main_weight_fut_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/main_weight_fut_value"
                android:layout_marginLeft="@dimen/view_margin_15"
                android:layout_toRightOf="@+id/main_weight_fut_value"
                android:text="KG"
                android:textColor="@color/home_text_mid"
                android:textSize="@dimen/text_text_20" />


            <TextView
                android:id="@+id/main_weight_fut_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_weight_fut_value"

                android:layout_marginTop="@dimen/view_margin_30"
                android:text="目标体重"
                android:textColor="@color/home_text_mid"
                android:textSize="@dimen/text_text_20" />

        </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoLinearLayout>>



    </com.zhy.autolayout.AutoRelativeLayout>


</com.zhy.autolayout.AutoLinearLayout>
